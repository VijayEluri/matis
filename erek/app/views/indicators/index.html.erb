<h1>Listing indicators</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
  </tr>

<% @indicators.each do |indicator| %>
  <tr>
    <td><%=h indicator.code %></td>
    <td><%=h indicator.name %></td>
    <td><%= link_to 'Show', indicator %></td>
    <td><%= link_to 'Edit', edit_indicator_path(indicator) %></td>
    <td><%= link_to 'Destroy', indicator, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New indicator', new_indicator_path %>