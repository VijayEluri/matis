<h1>Listing hazards</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
  </tr>

<% @hazards.each do |hazard| %>
  <tr>
    <td><%=h hazard.code %></td>
    <td><%=h hazard.name %></td>
    <td><%= link_to 'Show', hazard %></td>
    <td><%= link_to 'Edit', edit_hazard_path(hazard) %></td>
    <td><%= link_to 'Destroy', hazard, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New hazard', new_hazard_path %>